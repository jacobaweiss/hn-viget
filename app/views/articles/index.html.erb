<table>
	<% @articles.each do |article| %>
	  <tr>
			<td> 
				<% if article.url? %>
					<%= link_to article.title, article.url %> | (<%= article.url %>)
				<% else %>
					<%= link_to article.title, article %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>
				created <%= time_ago_in_words(article.created_at) %> ago by <%= link_to article.user.email, article.user %> | <%= link_to 'comments', article %> 
				<% if current_user == article.user %>
					<%= link_to " | Destroy", article, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td><div class="clear"></td>
		</tr>
	<% end %>
</table>

<br />

<%= link_to_next_page @articles, 'More' %>
