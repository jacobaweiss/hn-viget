<ul id="index-page">
<% @articles.each do |article| %>
	<li>
		<table>
			<tr>
				<td>
					<% if article.url? %>
						<%= link_to article.title, article.url %> | (<%= article.url %>)
					<% else %>
						<%= link_to article.title, article %>
					<% end %>
				</td>
			</tr>
			<tr>
				<td>
					created <%= time_ago_in_words(article.created_at) %> ago by <%= link_to article.user.email, article.user %> | <%= link_to pluralize(article.comments.count, 'comment'), article %> 
					<% if current_user == article.user %>
					 	| 
						<%= link_to "Destroy", article, method: :delete, data: { confirm: 'Are you sure?' } %>
					<% end %>
				</td>
			</tr>
			<tr>
				<td>
				<span>
					<% unless current_user && current_user.has_voted?(article) %>
						<span id="up-article-<%= article.id %>"><%= link_to "â–²", article_upvote_path(article), :remote => true %></span>
					<% end %>
				</span>
				<span id="vote-<%= article.id %>">
					<%= article.vote_count %>
				</span>
				<span>
					<% unless current_user && current_user.has_voted?(article) %>
						<span id="down-article-<%= article.id %>"><%= link_to "â–¼", article_downvote_path(article), :remote => true %></span>
					<% end %>
				</span>
				</td>
			</tr>
		</table>
	</li>
<% end %>
</ul>

<%= link_to_next_page @articles, 'More' %>
