<table>
	<% @articles.each do |article| %>
	  <tr>
			<td class="topline">
						<tr>
							<td><%= article.vote_count %></td>
						</tr>
						<% unless current_user.has_voted?(article) %>
							<tr>
								<td><%= link_to image_tag("up.png", :height => '10'), article_upvote_path(article) %></td>
							</tr>
							<tr>
								<td><%= link_to image_tag("down.png", :height => '10'), article_downvote_path(article) %></td>
							</tr>
						<% end %>
			</td>
			<td class="">
				<% if article.url? %>
					<%= link_to article.title, article.url %> | (<%= article.url %>)
				<% else %>
					<%= link_to article.title, article %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td class="">
				created <%= time_ago_in_words(article.created_at) %> ago by <%= link_to article.user.email, article.user %> | <%= link_to pluralize(article.comments.count, 'comment'), article %> 
				<% if current_user == article.user %>
				 	| 
					<%= link_to "Destroy", article, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td><div class="clear"></td>
		</tr>
	<% end %>
</table>

<br />

<%= link_to_next_page @articles, 'More' %>
