<!DOCTYPE html>
<html>
<head>
  <title>Hn</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
	<body>
		<div class="container_12">
			<div id="navigation" class="grid_12">
				<div id ="logo" class="grid_2"><%= link_to 'Haxxor News', articles_path %></div>
				<div class="grid_2"><%= link_to 'Submit', new_article_path %></div>
				<% unless current_user %>
					<div class="grid_2 prefix_6"><%= link_to 'Log In', login_path %> or <%= link_to 'Sign up', signup_path %></div>
				<% else %>
					<div class="grid_2 prefix_6">
						<%= link_to current_user.email, current_user %> | 
						<%= link_to 'Log Out', logout_path, method: "delete" %>
					</div>
				<% end %>
				</div>
			<div class="grid_12">
				<% flash.each do |key, value| %>
			        <div class="alert alert-<%= key %>"><%= value %></div>
	      <% end %>
				<%= yield %>
			</div>
		</div>
	</body>
</html>
